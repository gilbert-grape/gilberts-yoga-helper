# Daily crawl for Gilbert's Yoga Helper
# Runs every day at 06:00
# Install: sudo cp deploy/cron-daily-crawl /etc/cron.d/gilberts-yoga-helper-crawl

SHELL=/bin/bash
PATH=/usr/local/sbin:/usr/local/bin:/sbin:/bin:/usr/sbin:/usr/bin

# Run crawl at 06:00 every day
0 6 * * * pi cd /home/pi/gilberts-yoga-helper && /home/pi/gilberts-yoga-helper/.venv/bin/python -m backend.cli crawl >> /home/pi/gilberts-yoga-helper/logs/crawl.log 2>&1
